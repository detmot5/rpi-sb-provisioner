<!DOCTYPE html>
<html>
<head>
    <title>@action_title</title>
    <link rel="stylesheet" href="/css/common.css">
</head>
<body>
    <!-- Navigation Bar -->
    <div class="navbar">
        <a href="/devices">Devices</a>
        <a href="/get-images">Images</a>
        <a href="/options/get">Options</a>
        <a href="/customisation/list-scripts" class="active">Customisation</a>
        <a href="/services">Services</a>
    </div>

    <a href="/customisation/list-scripts" class="back-link">‚Üê Back to Scripts</a>
    
    <div id="success-message" class="success-message"></div>
    <div id="error-message" class="error-message"></div>
    
    <div class="confirm-container">
        <div class="icon @action_type">
            @if(action_type == "delete") {
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
            } else if(action_type == "enable") {
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            } else {
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            }
        </div>
        <h1>@action_title</h1>
        <p class="message">@action_message</p>
        <div class="button-group">
            <a href="/customisation/list-scripts" class="button cancel">Cancel</a>
            <form action="@action_url" method="post" style="display: inline;">
                <button type="submit" class="button confirm @action_type">@action_button</button>
            </form>
        </div>
    </div>
</body>
</html> 